{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "lib": ["ESNext"],
      "moduleResolution": "Node",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "declaration": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "test"]
  }
  